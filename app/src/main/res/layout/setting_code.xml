<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:passcodeView="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="70dp"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="보호자 비밀번호 설정하기" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/spoqahansansneo_medium"
        android:textSize="16dp"
        android:textColor="#8C8C8C"
        android:text="이 코드를 사용하면 자녀의 훈련을 중간에\n멈출 수 있습니다." />


    <online.devliving.passcodeview.PasscodeView
        android:id="@+id/passcode_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        passcodeView:controlColor="#8C8C8C"
        passcodeView:digitColorFilled="#FFBDBE"
        passcodeView:numDigits="5"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button1"
        android:textColor="@color/white"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="저장하기" />

</LinearLayout>